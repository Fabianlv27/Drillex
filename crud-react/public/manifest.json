{
  "manifest_version": 3,
  "name": "Drillex",
  "version": "1.0",
  "description": "Tu asistente de idiomas flotante",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://dibylocal.com:8000/*" 
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}